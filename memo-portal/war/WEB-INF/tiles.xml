<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC 
	"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" 
	"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- MAIN TEMPLATE -->

	<definition name="main-template" template="/WEB-INF/views/main-template.jsp" />

	<definition name="/home" extends="main-template">
		<put-attribute name="content" value="/WEB-INF/classes/memo/web/portal/server/PortalController_doHome.jsp" />
	</definition>

	<definition name="/test/login.pro" extends="main-template">
		<put-attribute name="content" value="/WEB-INF/classes/memo/web/portal/server/test/TestController_doLogin.jsp" />
	</definition>

	<definition name="/test/wait" extends="main-template">
		<put-attribute name="content" value="/WEB-INF/classes/memo/web/portal/server/test/TestController_doWait.jsp" />
	</definition>

	<!-- OPENID TEMPLATE -->

	<definition name="openid-template" template="/WEB-INF/views/openid-template.jsp" />

	<definition name="/openid/setup" extends="openid-template">
		<put-attribute name="body" value="/WEB-INF/classes/mojo/web/login/OpenIDLoginController_doSetup.jsp" />
	</definition>

	<definition name="/openid/verify" extends="openid-template">
		<put-attribute name="body" value="/WEB-INF/classes/mojo/web/login/OpenIDLoginController_doVerify.jsp" />
	</definition>

	<!-- EXCEPTION TEMPLATE -->

	<definition name="exception-template" template="/WEB-INF/views/exception-template.jsp" />

	<!-- view name defined in spring-mvc.xml -->
	<definition name="/web/any-exception" extends="exception-template">
		<put-attribute name="body" value="/WEB-INF/classes/mojo/web/view/any-exception.jsp" />
	</definition>

	<!-- view name defined in spring-mvc.xml -->
	<definition name="/web/web-exception" extends="exception-template">
		<put-attribute name="body" value="/WEB-INF/classes/mojo/web/view/web-exception.jsp" />
	</definition>

</tiles-definitions>
